generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  bookings Booking[] // ðŸ‘ˆ REQUIRED opposite relation
}

model Booking {
  id          String   @id @default(uuid())
  userId      String
  airline     String
  origin      String
  destination String
  price       Int
  travelDate  DateTime
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Flight {
  id          String   @id @default(uuid())
  origin      String
  destination String
  airline     String
  price       Int
  createdAt   DateTime @default(now())
}
